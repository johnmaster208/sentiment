<IfModule mod_rewrite.c>

RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Sentiment Analysis
RewriteRule api/sentimenty/?(.*)$ sentimenty.php?request=$1 [QSA,NC,L]

# Textpot is for the sentimental distribution
RewriteRule api/textpot/?(.*)$ textpot.php?q=$1 [QSA,NC,L]

# Textprobe is for spidering a website and learning the esig (emotional significance)
RewriteRule api/textprobe/?(.*)$ textprobe.php?q=$1 [QSA,NC,L]

# Textpluck is for txt files and pdf files\

# Demos Page

RewriteRule demos(.*)$ demos.php?r=$1 [QSA,NC,L]


</IfModule>